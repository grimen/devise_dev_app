  <% semantic_form_for resource_name, resource, :url => session_path(resource_name), :html => {:id => "user_sign_in_form", :class => 'devise sign_in user'} do |f| -%>
    <%= f.errors_on(:base) %>
    <% f.inputs do %>
      <%= f.input :email %>
      <%= f.input :password %>
      <% if devise_mapping.rememberable? -%>
        <%= f.input :remember_me %>
      <% end -%>
    <% end %>
    
    <% f.buttons do %>
      <%= f.commit_button %>
    <% end %>
  <% end -%>
<% end%>

<%- if devise_mapping.recoverable? %>
  <%= link_to "Forgot password?", new_password_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.confirmable? %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
<% end -%>
